@model WebsiteDienNghien.Models.product
@using WebsiteDienNghien.Utils

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Areas/admin/Views/Shared/MyLayout.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <div class="page-header">
                <h4 class="page-title">Quản lý sản phẩm</h4>
                <ul class="breadcrumbs">
                    <li class="nav-home">
                        <a href="@Url.Action("Index", "Default")">
                            <i class="flaticon-home"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="flaticon-right-arrow"></i>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Products")">Quản lý sản phẩm</a>
                    </li>
                    <li class="separator">
                        <i class="flaticon-right-arrow"></i>
                    </li>
                    <li class="nav-item">
                        <a href="#">Chi tiết sản phẩm</a>
                    </li>
                </ul>
            </div>
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Chi tiết sản phẩm</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("Tên")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.name)
                            </dd>

                            <dt>
                                @Html.DisplayName("Giá")
                            </dt>

                            <dd>
                                @Html.Raw(Functions.ConvertToVNCurrency(Model.price))
                            </dd>

                            <dt>
                                @Html.DisplayName("Hình ảnh")
                            </dt>

                            <dd>
                                <div class="avatar avatar-xxl">
                                    <img src="~/Content/upload/images/products/@Model.img" alt="..." class="avatar-img rounded">
                                </div>
                            </dd>

                            <dt>
                                @Html.DisplayName("Mô tả")
                            </dt>

                            <dd>
                                @Html.Raw(Model.detail)
                            </dd>

                            <dt>
                                @Html.DisplayName("Kích thước")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.size)
                            </dd>

                            <dt>
                                @Html.DisplayName("Màu sắc")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.color)
                            </dd>

                            <dt>
                                @Html.DisplayName("Meta")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.meta)
                            </dd>

                            <dt>
                                @Html.DisplayName("Ẩn")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.hide)
                            </dd>

                            <dt>
                                @Html.DisplayName("Thứ tự")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.order)
                            </dd>

                            <dt>
                                @Html.DisplayName("Ngày cập nhật")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.datebegin)
                            </dd>

                            <dt>
                                @Html.DisplayName("Loại sản phẩm")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.category.name)
                            </dd>

                        </dl>
                    </div>
                </div>
                <div class="card-action">
                    <p>
                        @Html.ActionLink("Chỉnh sửa", "Edit", routeValues: new { id = Model.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-success" }) |
                        @Html.ActionLink("Trở về", "Index", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                    </p>
                </div>
            </div>
    </div>
