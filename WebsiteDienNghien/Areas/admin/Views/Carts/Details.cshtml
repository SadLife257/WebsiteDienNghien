@model WebsiteDienNghien.Models.cart
@using WebsiteDienNghien.Utils

@{
    ViewBag.Title = "Chi tiết giỏ hàng";
    Layout = "~/Areas/admin/Views/Shared/MyLayout.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <div class="page-header">
                <h4 class="page-title">Quản lý giỏ hàng</h4>
                <ul class="breadcrumbs">
                    <li class="nav-home">
                        <a href="#">
                            <i class="flaticon-home"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="flaticon-right-arrow"></i>
                    </li>
                    <li class="nav-item">
                        <a href="#">Quản lý giỏ hàng</a>
                    </li>
                    <li class="separator">
                        <i class="flaticon-right-arrow"></i>
                    </li>
                    <li class="nav-item">
                        <a href="#">Chi tiết giỏ hàng</a>
                    </li>
                </ul>
            </div>
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Chi tiết giỏ hàng</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("Tên người dùng")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.account.username)
                            </dd>

                            <dt>
                                @Html.DisplayName("Tổng số tiền")
                            </dt>

                            <dd>
                                @Html.Raw(Functions.ConvertToVNCurrency(Model.total))
                            </dd>

                            <dt>
                                @Html.DisplayName("Trạng thái")
                            </dt>

                            <dd>
                                @(Model.isOrder ? "Giao hàng" : "Tạo đơn")
                            </dd>

                            <dt>
                                @Html.DisplayName("Ngày tạo")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.datebegin)
                            </dd>

                        </dl>
                    </div>

                </div>
                <div class="card-action">
                    <p>
                        @Html.ActionLink("Chỉnh sửa", "Edit", routeValues: new { id = Model.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-success" }) |
                        @Html.ActionLink("Trở về", "Index", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                    </p>
                </div>
            </div>
        </div>
    </div>
