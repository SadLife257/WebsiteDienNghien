@model WebsiteDienNghien.Models.account

@{
    ViewBag.Title = "Chi tiết tài khoản";
    Layout = "~/Areas/admin/Views/Shared/MyLayout.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <div class="page-header">
                <h4 class="page-title">Quản lý tài khoản</h4>
                <ul class="breadcrumbs">
                    <li class="nav-home">
                        <a href="@Url.Action("Index", "Default")">
                            <i class="flaticon-home"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="flaticon-right-arrow"></i>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Accounts")">Quản lý tài khoản</a>
                    </li>
                    <li class="separator">
                        <i class="flaticon-right-arrow"></i>
                    </li>
                    <li class="nav-item">
                        <a href="#">Chi tiết tài khoản</a>
                    </li>
                </ul>
            </div>
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Chi tiết tài khoản</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("Tên")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.firstname)
                            </dd>

                            <dt>
                                @Html.DisplayName("Họ và tên lót")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.lassname)
                            </dd>

                            <dt>
                                @Html.DisplayName("Tên người dùng")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.username)
                            </dd>

                            <dt>
                                @Html.DisplayName("Email")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.email)
                            </dd>

                            <dt>
                                @Html.DisplayName("Mật khẩu")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.password)
                            </dd>

                            <dt>
                                @Html.DisplayName("Địa chỉ")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.address)
                            </dd>

                            <dt>
                                @Html.DisplayName("Số điện thoại")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.phonenumber)
                            </dd>

                            <dt>
                                @Html.DisplayName("Quyền")
                            </dt>

                            <dd>
                                @{
                                    string nameList = "";
                                }
                                @foreach (var r in Model.roles)
                                {
                                    nameList += r.name + ", ";
                                }
                                @Html.Raw(nameList.Trim().TrimEnd(','))
                            </dd>

                        </dl>
                    </div>
                </div>
                <div class="card-action">
                    <p>
                        @Html.ActionLink("Chỉnh sửa", "Edit", routeValues: new { id = Model.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-success" }) |
                        @Html.ActionLink("Trở về", "Index", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                    </p>
                </div>
            </div>
    </div>
