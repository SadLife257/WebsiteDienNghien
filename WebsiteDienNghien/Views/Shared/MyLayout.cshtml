<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Điện Nghiên</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    @Styles.Render("~/css/general")
    @Scripts.Render("~/js/general")

    <link rel="shortcut icon" href="~/Content/upload/images/ico/favicon.ico" />
    <link rel="apple-touch-icon-precomposed"
          sizes="144x144"
          href="~/Content/upload/images/ico/apple-touch-icon-144-precomposed.png" />
    <link rel="apple-touch-icon-precomposed"
          sizes="114x114"
          href="~/Content/upload/images/ico/apple-touch-icon-114-precomposed.png" />
    <link rel="apple-touch-icon-precomposed"
          sizes="72x72"
          href="~/Content/upload/images/ico/apple-touch-icon-72-precomposed.png" />
    <link rel="apple-touch-icon-precomposed"
          href="~/Content/upload/images/ico/apple-touch-icon-57-precomposed.png" />

</head>
<body>
    <div id="header">
        <div class="container">
            <!-- Navbar ================================================== -->
            <div id="logoArea" class="navbar">
                <a id="smallScreen" data-target="#topMenu" data-toggle="collapse" class="btn btn-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-inner">
                    <a class="brand" href="@Url.Action("Index", "Default")"><img src="~/Content/upload/images/logo_2.png" alt="Bootsshop" /></a>
                    <form class="form-inline navbar-search" method="GET" action="/tim-kiem">
                        <input name="srchTxt" id="srchFld" class="srchTxt" type="text" />
                        <select name="srchOption" class="srchTxt">
                            <option value="all">All</option>
                            @{Html.RenderAction("getCategory", "Default");}
                        </select>
                        <button type="submit" id="submitButton" class="btn btn-primary">Go</button>
                    </form>
                    <ul id="topMenu" class="nav pull-right">
                        @{ Html.RenderAction("getMenu", "Default");}
                        @if (ViewBag.isAuthenticated == null && ViewBag.first_name == null)
                        {
                            <li class="">
                                <a href="@Url.RouteUrl("Login")" role="button" data-toggle="modal" style="padding-right:0"><span class="btn btn-large btn-success">Login</span></a>
                            </li>
                        }
                        else
                        {
                            <li class="" style="text-transform: capitalize;"><a style="pointer-events: none; cursor: default;" href="@Url.Action("Index", "Default")">@ViewBag.first_name</a></li>
                            <li class="">
                                <a href="@Url.Action("LogOut", "Account")" role="button" data-toggle="modal" style="padding-right:0"><span class="btn btn-large btn-success">Log Out</span></a>
                            </li>   
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End====================================================================== -->
    <!-- CONTENT START====================================================================== -->
    @RenderBody()
    <!-- CONTENT END====================================================================== -->
    <!-- Footer ================================================================== -->
    <div id="footerSection">
        <div class="container">
            <div class="row">

                <div class="span9">
                    <h5>INFORMATION</h5>
                    <a href="@Url.Action("Contact", "Default")">LIÊN LẠC VỚI CHÚNG TÔI</a>
                    <a href="@Url.Action("Registration", "Account")">ĐĂNG KÝ TÀI KHOẢN</a>
                </div>
                <div id="socialMedia" class="span3 pull-right">
                    <h5>SOCIAL MEDIA </h5>
                    <a href="#"><img width="60" height="60" src="~/Content/upload/images/facebook.png" title="facebook" alt="facebook" /></a>
                    <a href="#"><img width="60" height="60" src="~/Content/upload/images/twitter.png" title="twitter" alt="twitter" /></a>
                    <a href="#"><img width="60" height="60" src="~/Content/upload/images/youtube.png" title="youtube" alt="youtube" /></a>
                </div>
            </div>
            <p class="pull-right">52000632@student.tdtu.edu.vn</p>
        </div><!-- Container End -->
    </div>
</body>
</html>