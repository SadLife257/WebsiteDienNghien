@using WebsiteDienNghien.Utils

@{
    ViewBag.Title = "Tìm kiếm";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            <div id="sidebar" class="span3">
                <div class="well well-small">
                    <a id="myCart" href="@Url.Action("Index", "Cart", new { id = ViewBag.user_id})"><img src="/Content/upload/images/ico-cart.png" alt="cart">GIỎ HÀNG<span class="badge badge-warning pull-right">MUA NGAY</span></a>
                </div>
                <ul id="sideManu" class="nav nav-tabs nav-stacked">
                    @{Html.RenderAction("getCategorySideBar", "Default"); }
                </ul>
                <br />
                <div class="thumbnail">
                    <img src="/Content/upload/images/payment_methods.png" title="Bootshop Payment Methods" alt="Payments Methods">
                    <div class="caption">
                        <h5>Payment Methods</h5>
                    </div>
                </div>
            </div>
            <!-- Sidebar end=============================================== -->
            <div class="span9">
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Default")">Trang chủ</a> <span class="divider">/</span></li>
                    <li class="active">Tìm kiếm</li>
                </ul>
                <h3>Tìm kiếm<small class="pull-right"> @ViewBag.count products are available</small></h3>
                <hr class="soft" />
                @*<p>
                    Nowadays the lingerie industry is one of the most successful business spheres.We always stay in touch with the latest fashion tendencies - that is why our goods are so popular and we have a great number of faithful customers all over the country.
                </p>*@
                <hr class="soft" />
                @*<form class="form-horizontal span6">
                        <div class="control-group">
                            <label class="control-label alignL">Sort By </label>
                            <select>
                                <option>Product name A - Z</option>
                                <option>Product name Z - A</option>
                                <option>Product Stoke</option>
                                <option>Price Lowest first</option>
                            </select>
                        </div>
                    </form>*@

                <div id="myTab" class="pull-right">
                    <a href="#listView" data-toggle="tab"><span class="btn btn-large"><i class="icon-list"></i></span></a>
                    <a href="#blockView" data-toggle="tab"><span class="btn btn-large btn-primary"><i class="icon-th-large"></i></span></a>
                </div>
                <br class="clr" />
                <div class="tab-content">
                    <div class="tab-pane" id="listView">
                        @*NO ID TO USE PARTIAL VIEW*@
                        @foreach (var i in Model)
                        {
                            <div class="row">
                                <div class="span2">
                                    <img src="~/Content/upload/images/products/@i.img" alt="" />
                                </div>
                                <div class="span4">
                                    <h3>@i.name</h3>
                                    <hr class="soft" />
                                    <h5>@i.name</h5>
                                    <a class="btn btn-small pull-right" href="@Url.Action("Detail", "Product", new { id = i.id})">View Details</a>
                                    <br class="clr" />
                                </div>
                                <div class="span3 alignR">
                                    <form class="form-horizontal qtyFrm">
                                        <h3>@Functions.ConvertToVNCurrency(i.price)</h3>
                                        <label class="checkbox">
                                            <input type="checkbox">  Adds product to compair
                                        </label><br />

                                        <a href="@Url.Action("Detail", "Product", new { id = i.id})" class="btn btn-large btn-primary"> Add to <i class=" icon-shopping-cart"></i></a>
                                        <a href="@Url.Action("Detail", "Product", new { id = i.id})" class="btn btn-large"><i class="icon-zoom-in"></i></a>

                                    </form>
                                </div>
                            </div>
                            <hr class="soft" />
                        }
                    </div>

                    <div class="tab-pane  active" id="blockView">
                        <ul class="thumbnails">
                            @*NO ID TO USE PARTIAL VIEW*@
                            @foreach (var i in Model)
                            {
                                <li class="span3">
                                    <div class="thumbnail">
                                        <a href="@Url.Action("Detail", "Product", new { id = i.id})"><img src="~/Content/upload/images/products/@i.img" alt="" /></a>
                                        <div class="caption">
                                            <h5>@i.name</h5>
                                            <h4 style="text-align:center"><a class="btn" href="@Url.Action("Detail", "Product", new { id = i.id})"> <i class="icon-zoom-in"></i></a> <a class="btn" href="@ViewBag.meta/@i.meta/@i.id">Add to <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary" href="@Url.Action("Detail", "Product", new { id = i.id})">@Functions.ConvertToVNCurrency(i.price)</a></h4>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                        <hr class="soft" />
                    </div>
                </div>

                <br class="clr" />
            </div>
        </div>
    </div>
</div>
<!-- MainBody End ============================= -->
