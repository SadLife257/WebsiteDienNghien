@model IEnumerable<WebsiteDienNghien.Models.cart_product>
@using WebsiteDienNghien.Utils

@foreach (var i in Model)
{
    <tr>
        <td> <img width="60" src="~/Content/upload/images/products/@i.product.img" alt="" /></td>
        <td>@i.product.name<br />Color: @i.product.color | Size: @i.product.size</td>
        <td>
            <div class="input-append"><input class="span1" style="max-width:34px" placeholder="1" id="appendedInputButtons" size="16" type="number" value=@i.quantity><button class="btn" type="button"><i class="icon-minus"></i></button><button class="btn" type="button"><i class="icon-plus"></i></button><button class="btn btn-danger" type="button"><i class="icon-remove icon-white"></i></button>	</div>
        </td>
        <td>@Functions.ConvertToVNCurrency(i.product.price)</td>
        <td>@Functions.ConvertToVNCurrency(i.quantity * i.product.price)</td>
    </tr>
}
