
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div id="mainBody">
    <div class="container">
        <hr class="soften">
        <h1>Liên lạc với chúng tôi</h1>
        <hr class="soften" />
        <div class="row">
            <div class="span4">
                <h4>Thông tin liên hệ</h4>
                <p>
                    Địa chỉ: Số 23 Đường Trần Hưng Đạo, Phường 1, <br />Sa Đéc, Đồng Tháp<br />
                    ﻿Điện thoại: 0277 3861 753<br />
                    Tỉnh: Đồng Tháp<br />
                </p>
            </div>

            <div class="span4">
                <h4>Opening Hours</h4>
                <h5> Thứ Hai - Thứ Sáu</h5>
                <p>09:00am - 09:00pm<br /><br /></p>
                <h5>Thứ Bảy</h5>
                <p>09:00am - 07:00pm<br /><br /></p>
                <h5>Chủ nhật</h5>
                <p>12:30pm - 06:00pm<br /><br /></p>
            </div>
            <div class="span4">
                <h4>Gửi Email Cho Chúng Tôi</h4>
                @using (Html.BeginForm("sendFeedBack", "Default", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <fieldset>
                        <div class="control-group">

                            <input type="text" placeholder="Tên" class="input-xlarge" name="contact-name" />

                        </div>
                        <div class="control-group">

                            <input type="text" placeholder="Email" class="input-xlarge" name="contact-email"/>

                        </div>
                        <div class="control-group">

                            <input type="text" placeholder="Chủ đề" class="input-xlarge" name="contact-subject"/>

                        </div>
                        <div class="control-group">
                            <textarea rows="3" id="textarea" class="input-xlarge" placeholder="Nhập nội dung..." name="contact-body"></textarea>

                        </div>

                        <button class="btn btn-large" type="submit">Gửi Feedback</button>

                    </fieldset>
                }
            </div>
        </div>
        <div class="row">
            <div class="span12">
                <iframe style="width:100%; height:300; border: 0px" scrolling="no" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15702.431152759817!2d105.7676449!3d10.2931518!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x310a7e3d7272c307%3A0x6f9f726e2614d499!2zVGnhu4dtIMSQaeG7h24gTmdoacOqbg!5e0!3m2!1svi!2s!4v1681068978962!5m2!1svi!2s"></iframe><br />
                <small><a href="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15702.431152759817!2d105.7676449!3d10.2931518!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x310a7e3d7272c307%3A0x6f9f726e2614d499!2zVGnhu4dtIMSQaeG7h24gTmdoacOqbg!5e0!3m2!1svi!2s!4v1681068978962!5m2!1svi!2s" style="color:#0000FF;text-align:left">View Larger Map</a></small>
            </div>
        </div>
    </div>
</div>

